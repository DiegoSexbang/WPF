        <TextBox x:Name="txtArtista" HorizontalAlignment="Left" Height="23" Margin="392,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Artista" HorizontalAlignment="Left" Margin="343,89,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.955,0.538"/>

    </Grid>
